@model MiTutor.ViewModels.Account.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="containerLogin">

    <div class="login-view">
        <header>
            <img src="~/assets/Logo.svg" />
        </header>

        <div class="form-login">
            <div class="header-login">
                <h2>Login</h2>
                <div class="line"></div>
            </div>

            <form asp-controller="Account" asp-action="Login" method="post">

                <div asp-validation-summary="All"></div>

                <div class="field">
                    <label>Usuario o correo</label>
                    <input asp-for="Username" placeholder="Ingrese su usuario o correo" />
                    <span asp-validation-for="Username"></span>
                </div>

                <div class="field">
                    <label>Contraseña</label>
                    <input asp-for="Password" placeholder="Ingrese su contraseña" />
                    <span asp-validation-for="Password"></span>
                </div>

                <div class="field">
                    <button type="submit">Ingresar</button>
                </div>

            </form>
        </div>
    </div>

    <div class="register-view">
        <img src="~/assets/RegisterArt1.svg" />

        <h2>Estudiante Nuevo</h2>
        <p>Puedes registrarte de manera gratuita y disfrutar de muchos beneficios</p>

        <a asp-controller="Account" asp-action="Register">
            <button>Registrarme</button>
        </a>
    </div>

</div>